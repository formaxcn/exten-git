{
  "manifest_version": 3,
  "name": "Exten Git",
  "version": "1.0",
  "description": "Sync your Chrome extensions with a Git repository",
  "permissions": [
    "management",
    "storage"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "js/service/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Exten Git"
  },
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}